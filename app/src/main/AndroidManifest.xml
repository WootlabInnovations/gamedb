<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gamedb">

    <!-- TODO: Put the INTERNET and ACCESS_NETWORK_STATE permission tags -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_game_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_game_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.GameDetailActivity"
            android:parentActivityName=".ui.activity.MainActivity"></activity>
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>